<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#030303"
    android:orientation="vertical">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="150dp"

            >



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:text="Welcome Back to  Ray Crypto "
                android:textSize="24dp"
                android:gravity="center|left"
                android:paddingTop="8dp"
                android:paddingLeft="20dp"
                android:src="@drawable/ray_crypto2"

                android:textStyle="bold"

                android:textColor="#39ff14"
                >


            </ImageView>



        </RelativeLayout>



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="540dp"
            android:layout_marginTop="20dp"

            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/top_round"
                >

            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="LOGIN"
                    android:fontFamily="@font/poppins_regular"
                    android:textStyle="bold"
                    android:textSize="28dp"
                    android:textColor="#39ff14"
                    android:paddingLeft="30dp"
                    android:paddingRight="15dp">


                </TextView>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="20dp">


                    <EditText
                        android:id="@+id/usernameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/blue_border_rounded_cornwe"
                        android:elevation="10dp"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Email"
                        android:paddingLeft="40dp"
                        android:paddingRight="5dp"
                        android:textColor="#39ff14"
                        android:maxLines="1"
                        android:textColorHint="#39ff14"
                        android:textStyle="bold"


                        android:textSize="14dp">


                    </EditText>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:src="@drawable/email2"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="27dp"
                        android:padding="8dp"

                        >

                    </ImageView>


                </RelativeLayout>

                <!--
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textSize="18dp"
                    android:text="Password"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#c2c2c2"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    >

                </TextView>


-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    >

                    <EditText
                        android:id="@+id/registerPasswordEditText"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/blue_border_rounded_cornwe"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Password"
                        android:paddingLeft="40dp"
                        android:paddingRight="5dp"
                        android:textColor="#39ff14"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:maxLength="12"
                        android:textColorHint="#39ff14"
                        android:textStyle="bold"

                        android:textSize="14dp">

                    </EditText>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:src="@drawable/password2"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="27dp"
                        android:padding="7dp"

                        >

                    </ImageView>

                </RelativeLayout>

                <TextView
                    android:id="@+id/forgotPasswordTextView"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginRight="40dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="right"
                    android:text="Forgot Password ?"
                    android:textColor="#39ff14"
                    android:textStyle="bold"

                    android:textSize="14dp">

                </TextView>

                <ImageView
                    android:id="@+id/loginButtonImageView"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    android:padding="5dp"

                    android:src="@drawable/arrow">

                </ImageView>

                <TextView
                    android:id="@+id/createAccountTextView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    android:text="Dont Have an Account , Create Account ."
                    android:textColor="#39ff14"


                    android:textSize="16dp">

                </TextView>



            </LinearLayout>



        </FrameLayout>







    </LinearLayout>



    </ScrollView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ProgressBar
            android:id="@+id/loginProgressBar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="520dp"
            android:layout_marginLeft="150dp"
            android:outlineSpotShadowColor="@color/green"
            android:outlineAmbientShadowColor="@color/green"
            android:visibility="invisible"
            android:indeterminateTint="@color/green"
            ></ProgressBar>
    </RelativeLayout>

</RelativeLayout>