<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About_Us"

    android:background="@drawable/darkbluegradient"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/aboutBack"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:src="@drawable/back"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            ></ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="About Us"
            android:textSize="24dp"
            android:textStyle="bold"
            android:gravity="center|left"
            android:layout_marginLeft="10dp"
            android:textColor="#39ff14"
            ></TextView>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="App Logo"
        android:gravity="center"
        android:textColor="#030303"
        android:src="@drawable/ray_crypto2"
        android:padding="20dp"


        ></ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="About Ray Crypto"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#39ff14"
        android:textStyle="bold"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:textStyle="normal"
        android:textColor="#39ff14"
        android:text="Ray Crypto is a cipher, hashing, encoding and learning tool for all ages. Cryptography has also many tools from anagram solving to password generation.
\nCryptographic functions are mathematical computations carried out on messages or data. The resulting values from these calculations are used as building blocks in cryptographic applications. Some common applications that use cryptographic functions include:
\n
 Cryptographic key generation and exchange\n
 Data encryption and decryption\n
 Digital signature creation and verification\n Basic cryptographic functions include cryptographic hashes and message authentication codes, and are generally classified as one-way functions.
\n \n
FEATURES : \n
 1 . Aes Encryption \n
 2 . Des Encryption \n
 3 . Binary Encryption \n
 4 . Caesar Cipher\n
 5 . Image Encryption\n
 6 . Text Encryption\n
 7 . File Encryption\n
 8 . Sharing\n
 9 . Daily Notification\n
 10 . Learn Encryption and Decryption\n
 11 . ...................
"
        android:gravity="top|left"
        android:padding="10dp"
        android:textSize="18dp"

        ></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:background="@drawable/top_round"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="20dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Visit Website : "
            android:textColor="#39ff14"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            ></TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/instagram"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:elevation="5dp"
                android:onClick="aboutInstagram"
                >
            </ImageView>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/twitter1"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_margin="5dp"
                android:elevation="5dp"
                android:onClick="aboutTwitter"
                >
            </ImageView>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/facebook"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_margin="5dp"
                android:elevation="5dp"
                android:onClick="aboutFacebook"
                >
            </ImageView>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/telegram"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_margin="5dp"
                android:elevation="5dp"
                android:onClick="aboutTelegram"
                >
            </ImageView>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff"
            android:layout_marginTop="20dp"
            ></View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Corporate Office"
            android:textColor="#39ff14"
            android:gravity="center"
            android:textSize="18dp"
            android:textStyle="bold"
            ></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rajesh Hotel Lane , Bhayandar West  , \n Thane 401101 , "
            android:textColor="#39ff14"
            android:gravity="center"
            android:textSize="16dp"


            ></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:elevation="5dp"
                android:text="Privacy Policy "
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:textColor="#39ff14"
                android:layout_gravity="center"
                android:gravity="center"
                ></TextView>
            <View
                android:layout_width="3dp"
                android:layout_height="50dp"
                android:background="#39ff14"
                android:layout_gravity="center"
                ></View>
            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:elevation="5dp"
                android:text="Terms and Condition "
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:textColor="#39ff14"
                android:layout_gravity="center"
                android:gravity="center"
                ></TextView>
        </LinearLayout>



    </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>