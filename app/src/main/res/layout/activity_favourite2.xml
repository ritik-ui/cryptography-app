<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Favourite2Activity"
    android:orientation="vertical"
    android:background="@drawable/darkbluegradient"
    android:padding="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/favBack"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:src="@drawable/back"
            android:layout_gravity="center"
            ></ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Save"
            android:textSize="24dp"
            android:textStyle="bold"
            android:gravity="center|left"
            android:layout_marginLeft="10dp"
            android:textColor="#39ff14"
            ></TextView>
    </LinearLayout>

    <Button
        android:id="@+id/favAes"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Aes Encryption"
        android:gravity="center"
        android:textSize="24dp"
        android:background="@drawable/blue_border"
        android:layout_margin="20dp"
        android:elevation="6dp"
        android:textColor="#39ff14"
        android:textStyle="bold"
        ></Button>
    <Button
        android:id="@+id/favDes"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Des Encryption"
        android:gravity="center"
        android:textSize="24dp"
        android:background="@drawable/blue_border"
        android:layout_margin="20dp"
        android:elevation="6dp"
        android:textColor="#39ff14"
        android:textStyle="bold"
        ></Button>
    <Button
        android:id="@+id/favBinary"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Binary Encryption"
        android:gravity="center"
        android:textSize="24dp"
        android:background="@drawable/blue_border"
        android:layout_margin="20dp"
        android:elevation="6dp"
        android:textColor="#39ff14"
        android:textStyle="bold"
        ></Button>
    <Button
        android:id="@+id/favCaesar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Caesar Cipher"
        android:gravity="center"
        android:textSize="24dp"
        android:background="@drawable/blue_border"
        android:layout_margin="20dp"
        android:elevation="6dp"
        android:textColor="#39ff14"
        android:textStyle="bold"
        ></Button>

</LinearLayout>