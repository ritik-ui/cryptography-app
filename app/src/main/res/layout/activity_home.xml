<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/darkbluegradient"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context=".Home">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"

        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:padding="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">


            <include layout="@layout/main_toolbar">

            </include>


        </RelativeLayout>





            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tools"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="#39ff14"
                android:layout_marginLeft="10dp"

                >

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/aes"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:text="AES"
                        android:textSize="18dp"
                        android:background="@drawable/blue_border"
                        android:elevation="5dp"

                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:textColor="#39ff14"
                        android:textStyle="bold"
                        >
                    </TextView>

                    <TextView
                        android:id="@+id/desTextView"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:text="DES"
                        android:textSize="18dp"
                        android:background="@drawable/blue_border"
                        android:elevation="5dp"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:textColor="#39ff14"
                        android:textStyle="bold"
                        >
                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/binary"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:text="Binary"
                        android:textSize="18dp"
                        android:background="@drawable/blue_border"
                        android:elevation="5dp"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:textColor="#39ff14"
                        android:textStyle="bold"
                        >
                    </TextView>

                    <TextView
                        android:id="@+id/caesarCipher"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:text="Caesar Cipher"
                        android:textSize="18dp"
                        android:background="@drawable/blue_border"
                        android:elevation="5dp"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:textColor="#39ff14"
                        android:textStyle="bold"
                        >
                    </TextView>


                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="10dp"
                >
                <TextView
                    android:id="@+id/learn"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/blue_border"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_margin="10dp"
                    android:elevation="5dp"
                    android:text="Learn Encryption And Decryption ."
                    android:textColor="#39ff14"
                    android:layout_gravity="center"
                    android:textSize="16dp"
                    android:padding="15dp"
                    android:textStyle="bold"



                    >

                </TextView>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >


                    <TextView
                        android:id="@+id/textEncryption"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:text="Text Encryption"
                        android:textSize="18dp"
                        android:background="@drawable/blue_border"
                        android:elevation="5dp"
                        android:layout_margin="10dp"
                        android:gravity="center|bottom"
                        android:padding="10dp"
                        android:textColor="#39ff14"
                        android:textStyle="bold"
                        >

                    </TextView>

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:elevation="5dp"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/ic_text"
                        >

                    </ImageView>


                    <TextView
                        android:id="@+id/imageEncryption"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:text="Image Encryption"
                        android:textSize="18dp"
                        android:background="@drawable/blue_border"
                        android:elevation="5dp"
                        android:gravity="center|bottom"
                        android:padding="10dp"
                        android:textColor="#39ff14"
                        android:textStyle="bold"
                        android:layout_marginLeft="170dp"
                        android:layout_marginTop="10dp"

                        >
                    </TextView>
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:elevation="5dp"
                        android:layout_marginLeft="205dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/ic_baseline_image_24"
                        >

                    </ImageView>


                </RelativeLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#39ff14"
                android:layout_marginTop="20dp"

                >
            </View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:textSize="24dp"
                android:textColor="#39ff14"
                android:text="Save"
                android:layout_marginTop="10dp"
                android:gravity="center|left"
                android:layout_marginLeft="10dp"


                >
            </TextView>

            <TextView
                android:id="@+id/favouriteTextView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="#39ff14"
                android:text="Save Encrypted Text Here"
                android:padding="10dp"
                android:background="@drawable/blue_border"
                android:elevation="5dp"
                android:gravity="center"
                android:layout_margin="15dp"


                >
            </TextView>







    </LinearLayout>

    </ScrollView>



    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white">

        <include layout="@layout/main_nav_drawer">

        </include>

    </RelativeLayout>






</androidx.drawerlayout.widget.DrawerLayout>